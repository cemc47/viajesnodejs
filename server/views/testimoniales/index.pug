extends ../layout/index

block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}

        .row
            .col-md-12
                include ../layout/partials/testimoniales
                        
            .col-md-12
                h2.text-center Agrega un Testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
                        
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="post")
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre" class="form-control" type="text", placeholder="Tu Nombre", name="nombre", value=nombre, maxlength="60")
                            .form-group
                                label(for="correo") Correo Electrónico
                                input(id="correo" class="form-control" type="email", placeholder="Tu Correo Electrónico", name="correo", value=correo, maxlength="30")
                            .form-group
                                label(for="mensaje") Nombre
                                textarea#mensaje(name="mensaje", cols="30", rows="3", placeholder="Tu Mensaje", class="form-control")=mensaje
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")